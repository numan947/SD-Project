<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/generic_edit_password_view_old_til"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/styleTextInputLayout"
                app:errorTextAppearance="@style/error_appearance">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:minLines="1"
                    android:hint="Type Old Password"
                    android:gravity="top|start"
                    android:id="@+id/generic_edit_password_view_old_textview"
                    style="@style/styleEditText"
                    android:imeOptions="actionNext"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/generic_edit_password_view_new_til"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/styleTextInputLayout"
                app:errorTextAppearance="@style/error_appearance">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:minLines="1"
                    android:hint="Type New Password"
                    android:gravity="top|start"
                    android:id="@+id/generic_edit_password_view_new_textview"
                    style="@style/styleEditText"
                    android:imeOptions="actionNext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/generic_edit_password_view_retype_til"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/styleTextInputLayout"
                app:errorTextAppearance="@style/error_appearance">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:minLines="1"
                    android:hint="Re-type New Password"
                    android:gravity="top|start"
                    android:id="@+id/generic_edit_password_view_retype_text"
                    style="@style/styleEditText"
                    android:imeOptions="actionNext"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>