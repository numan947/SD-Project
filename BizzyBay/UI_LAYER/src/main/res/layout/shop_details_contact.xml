<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true">
        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shop_details_map_view"
            android:background="@drawable/placeholder"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/shop_details_whatsapp_button"
                android:background="@drawable/whatsapp_1"
                android:layout_marginRight="60dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/shop_details_facebook_button"
                android:background="@drawable/facebook_1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="25sp"
            android:id="@+id/shop_details_address"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="20sp"
            android:id="@+id/shop_details_shop_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="20sp"
            android:id="@+id/shop_details_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auxiliary Phone"
            android:textSize="20sp"
            android:id="@+id/shop_details_auxiliary_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddressLine1"
            android:textSize="20sp"
            android:id="@+id/shop_details_address_line_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddressLine2"
            android:textSize="20sp"
            android:id="@+id/shop_details_address_line_2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddressLine3"
            android:textSize="20sp"
            android:id="@+id/shop_details_address_line_3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="20sp"
            android:id="@+id/shop_details_city"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zip"
            android:textSize="25sp"
            android:id="@+id/shop_details_zip"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>